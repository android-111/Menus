<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:menu="@menu/option_menu_items"
        app:title="@string/app_name" />

    <Button
        android:id="@+id/popmenuBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/darker_gray"
        android:padding="12dp"
        android:text="Pop-up Menu"
        android:textSize="15sp"
        android:layout_marginTop="90dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <Button
        android:id="@+id/contextMenuBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/darker_gray"
        android:padding="12dp"
        android:text="Context Menu"
        android:textSize="15sp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="@+id/popmenuBtn"
        app:layout_constraintStart_toStartOf="@+id/popmenuBtn"
        app:layout_constraintTop_toBottomOf="@+id/popmenuBtn" />

    <Button
        android:id="@+id/contextualBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/darker_gray"
        android:padding="12dp"
        android:text="Contextual Menu"
        android:textSize="15sp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="@+id/contextMenuBtn"
        app:layout_constraintStart_toStartOf="@+id/contextMenuBtn"
        app:layout_constraintTop_toBottomOf="@+id/contextMenuBtn" />

</androidx.constraintlayout.widget.ConstraintLayout>
